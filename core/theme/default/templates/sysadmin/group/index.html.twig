{% extends 'sysadmin/page.html.twig' %}

{% block content %}


	<table class="oneData">
		<tr>
			<th>ID</th>
			<td>{{ group.id }}</td>
		</tr>
		<tr>
			<th>Slug</th>
			<td>{{ group.slug }}</td>
		</tr>
		<tr>
			<th>Deleted</th>
			<td>{% if group.isDeleted %}Deleted{% else %}-{% endif %}</td>
		</tr>
		<tr>
			<th>Title</th>
			<td>{{ group.title }}</td>
		</tr>
		<tr>
			<th>Description</th>
			<td>{{ group.description | nl2br }}</td>
		</tr>
		<tr>
			<th>More</th>
			<td>
				<ul>
					<li><a href="/sysadmin/site/{{ site.id }}/group/{{ group.slug }}/watchers">Watchers</a></li>
				</ul>
			</td>
		</tr>		
	</table>

	<form action="#" method="post" class="action">
		{{ form_errors(form) }}
		{{ form_rest(form) }}
		<input type="submit" name="Do Action" />
	</form>

	<ul class="actionHelp">
		<li>delete</li>
		<li>undelete</li>
	</ul>

{% endblock %}