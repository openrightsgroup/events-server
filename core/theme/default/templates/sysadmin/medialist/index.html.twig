{% extends 'sysadmin/page.html.twig' %}

{% block pageTitle %}Medias - {% endblock %}

{% block breadcrumbs %}
	<li><a href="/sysadmin/site/{{ site.id }}/">{{ site.title }}</a></li>
	<li class="current"><a href="/sysadmin/site/{{ site.id }}/media">medias</a></li>
{% endblock %}
		
{% block content %}

	<table class="data">
		<tr>
			<th>Slug</th>
			<th>Thumb</th>
			<th>Title</th>
			<th>&nbsp;</th>
		</tr>
		{% for media in medias %}
			<tr {% if loop.index is even %}class="alternative"{% endif %} >
				<td>{{ media.slug }}</td>
				<td>
					{% if not media.isDeleted %}
						<a href="sysadmin/site/{{ site.id }}/media/{{ media.slug }}"><img src="{{ config.getWebSiteDomainSecure(site.slug) }}/media/{{ media.slug }}/thumbnail"></a>
					{% else %}
						Deleted
					{% endif %}
				</td>
				<td>{{ media.title }}</td>
				<td>
					<a href="/sysadmin/site/{{ site.id }}/media/{{ media.slug }}" class="button">Show</a>
				</td>
			</tr>
		{% endfor %}
	</table>

{% endblock %}

