{% extends 'sysadmin/page.html.twig' %}

{% block pageTitle %}Groups - {% endblock %}

{% block breadcrumbs %}
	<li><a href="/sysadmin/site/{{ site.id }}/">{{ site.title }}</a></li>
	<li class="current"><a href="/sysadmin/site/{{ site.id }}/group">groups</a></li>
{% endblock %}
		
{% block content %}

	<table class="data">
		<tr>
			<th>Slug</th>
			<th>Title</th>
			<th>&nbsp;</th>
		</tr>
		{% for group in groups %}
			<tr {% if loop.index is even %}class="alternative"{% endif %} >
				<td>{{ group.slug }}</td>
				<td>{{ group.title }}</td>
				<td>
					<a href="/sysadmin/site/{{ site.id }}/group/{{ group.slug }}" class="button">Show</a>
				</td>
			</tr>
		{% endfor %}
	</table>

{% endblock %}

