{% extends 'sysadmin/page.html.twig' %}

{% block content %}


	<table class="oneData">
		<tr>
			<th>ID</th>
			<td>{{ event.id }}</td>
		</tr>
		<tr>
			<th>Slug</th>
			<td>{{ event.slug }}</td>
		</tr>
		<tr>
			<th>Deleted</th>
			<td>{% if event.isDeleted %}Deleted{% else %}-{% endif %}</td>
		</tr>
		<tr>
			<th>Summary</th>
			<td>{{ event.summary }}</td>
		</tr>
		<tr>
			<th>Description</th>
			<td>{{ event.description | nl2br }}</td>
		</tr>
		<tr>
			<th>Start</th>
			<td>{{ event.startAt |tolocaltimeformatted('D H:i jS M Y', currentTimeZone ) }}</td>
		</tr>
		<tr>
			<th>End</th>
			<td>{{ event.endAt |tolocaltimeformatted('D H:i jS M Y', currentTimeZone ) }}</td>
		</tr>
		<tr>
			<th>Main Group ID</th>
			<td>{{ event.groupId }}</td>
		</tr>
		{% if group is not null %}
			<tr class="sub">
				<th>Main Group Slug</th>
				<td>{{ group.slug }}</td>
			</tr>
			<tr class="sub">
				<th>Main Group Title</th>
				<td>{{ group.title }}</td>
			</tr>
			<tr class="sub">
				<th>More</th>
				<td><a href="/sysadmin/site/{{ site.id }}/group/{{ group.slug }}">Group</a></td>
			</tr>
		{% endif %}
		<tr>
			<th>Venue ID</th>
			<td>{{ event.venueId }}</td>
		</tr>
		{% if venue is not null %}
			<tr class="sub">
				<th>Venue Slug</th>
				<td>{{ venue.slug }}</td>
			</tr>
			<tr class="sub">
				<th>Venue Title</th>
				<td>{{ venue.title }}</td>
			</tr>
		{% endif %}
		<tr>
			<th>Country ID</th>
			<td>{{ event.countryId }}</td>
		</tr>
		{% if country is not null %}
			<tr class="sub">
				<th>Country Title</th>
				<td>{{ country.title }}</td>
			</tr>
		{% endif %}
	</table>


	<table class="data">
		<tr>
			<th>Group Slug</th>
			<th>Group Title</th>
			<th>More</th>
		</tr>
		{% for group in groups %}
			<tr>
				<td>{{ group.slug }}</td>
				<td>{{ group.title }}</td>
				<td><a href="/sysadmin/site/{{ site.id }}/group/{{ group.slug }}">Group</a></td>
			</tr>
		{% endfor %}
	</table>

	<form action="#" method="post" class="action">
		{{ form_errors(form) }}
		{{ form_rest(form) }}
		<input type="submit" name="Do Action" />
	</form>

	<ul class="actionHelp">
		<li>addgroup  <span class="param">slug</a></li>
		<li>removegroup  <span class="param">slug</a></li>
		<li>maingroup  <span class="param">slug</a></li>
		<li>delete</li>
		<li>undelete</li>
		<li>addcuratedlist  <span class="param">curatedlistslug</a></li>
		<li>removecuratedlist  <span class="param">curatedlistslug</a></li>
	</ul>

{% endblock %}