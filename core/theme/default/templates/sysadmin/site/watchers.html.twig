{% extends 'sysadmin/page.html.twig' %}


{% block pageTitle %}Site {{  site.title }} Watchers - {% endblock %}


{% block breadcrumbs %}
	<li><a href="/sysadmin/site/{{ site.id }}/">{{ site.title }}</a></li>
	<li class="current"><a href="/sysadmin/site/{{ site.id }}/watchers">watchers</a></li>
{% endblock %}
		
{% block content %}

	<table class="data">
		<tr>
			<th>ID</th>
			<th>Username</th>
			<th>Email</th>
		</tr>
		{% for user in watchers %}
			<tr {% if loop.index is even %}class="alternative"{% endif %}>
				<td><a href="/sysadmin/user/{{ user.id }}">{{ user.id }}</a></td>
				<td><a href="/sysadmin/user/{{ user.id }}">{{ user.username }}</a></td>
				<td>{{ user.email }}</td>
			</tr>
		{% endfor %}
	</table>


{% endblock %}
