{% extends 'sysadmin/page.html.twig' %}


{% block pageTitle %}Area List - {% endblock %}


{% block breadcrumbs %}
	<li><a href="/sysadmin/site/{{ site.id }}/">{{ site.title }}</a></li>
	<li class="current"><a href="/sysadmin/site/{{ site.id }}/area">areas</a></li>
{% endblock %}
		
{% block content %}

	<table class="data">
		<tr>
			<th>Slug</th>
			<th>Title</th>
			<th>&nbsp;</th>
		</tr>
		{% for area in areas %}
			<tr {% if loop.index is even %}class="alternative"{% endif %} >
				<td>{{ area.slug }}</td>
				<td>{{ area.title }}</td>
				<td>
					<a href="/sysadmin/site/{{ site.id }}/area/{{ area.slug }}" class="button">Show</a>
				</td>
			</tr>
		{% endfor %}
	</table>

{% endblock %}

