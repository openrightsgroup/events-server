{% extends 'email/email.html.twig' %}

{% block content %}
	
	<p>Hello {{ user.username }}</p>

	<p>Your request has been granted and you can now edit {{ site.title }}.</p>

	<p><a href="{{ config.getWebSiteDomainSecure(site.slug) }}">Visit {{ site.slug }}.{{ config.webSiteDomain }} to start!</a></p>

	<p>Thanks,<br>
	{{ config.siteTitle }}</p>

{% endblock %}
