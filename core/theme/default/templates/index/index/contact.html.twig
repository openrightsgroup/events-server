{% extends 'index/page.html.twig' %}

{% block pageTitle %}Contact - {% endblock %} 

{% block htmlHeader %}
	<link rel="canonical" href="{{ config.getWebIndexDomainSecure }}/contact" />
{% endblock %}

{% block content %}
	
	{% if config.contactEmailHTML %}
	
		<h2>Email Us</h2>

		<p>Email us on {{ config.contactEmailHTML }}</p>
	
	{% endif %}
	
	<h2>Contact Us</h2>
	
	<form action="#" method="post" class="styled">
		{{ form_errors(form) }}

		{{ form_row(form.subject) }}
		{{ form_row(form.email) }}
		{{ form_row(form.message) }}

		{{ form_rest(form) }}

		<div style="display: none;">
			<label>URL<input type="text" name="url"></label>
		</div>
		
		<input type="submit" value="Send Message">
	</form>
	
	{% if config.contactTwitter or config.facebookPage or config.googlePlusPage %}
		<h2>Social?</h2>
	{% endif %}
	
	{% if config.contactTwitter %}
		<p>Follow us on <a target="_blank" href="http://twitter.com/{{  config.contactTwitter }}">Twitter @{{  config.contactTwitter }}</a>.</p>
	{% endif %}
		
	{% if config.facebookPage %}
		<p>Follow us on <a target="_blank" href="{{ config.facebookPage }}">Facebook</a>.</p>
	{% endif %}
		
	{% if config.googlePlusPage %}
		<p>Follow us on <a target="_blank" href="{{ config.googlePlusPage }}">Google+</a>.</p>
	{% endif %}

{% endblock %}
