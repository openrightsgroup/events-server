{% extends 'site/displayBoard.html.twig' %}


{% block pageTitle %}Display Board - {% endblock %} 



{% block today %}
	<h3>Today</h3>
	<ul class="displayBoardEvents">
		{% for event in eventsToday %}
			{%  include '/site/displayboard/event.html.twig' with { showStart : 'time' }  %}			
		{% endfor %}
	</ul>
{% endblock %}

{% block next %}
	{% if daysAheadInNextBox == 1 %}
		<h3>Tomorrow</h3>
		<ul class="displayBoardEvents">
			{% for event in eventsNext %}
				{%  include '/site/displayboard/event.html.twig' with { showStart : 'time' }  %}			
			{% endfor %}
		</ul>
	{% else %}
		<h3>Next {{ daysAheadInNextBox }} days</h3>
		<ul class="displayBoardEvents">
			{% for event in eventsNext %}
				{%  include '/site/displayboard/event.html.twig' with { showStart : 'date' }  %}			
			{% endfor %}
		</ul>
	{% endif %}
{% endblock %}

{% block later %}
	<h3>Later</h3>
	<ul class="displayBoardEvents">
		{% for event in eventsLater %}
			{%  include '/site/displayboard/event.html.twig' with { showStart : 'date' }  %}			
		{% endfor %}
	</ul>
{% endblock %}

