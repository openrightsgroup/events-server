{% extends 'site/page.html.twig' %}


{% block pageTitle %}My Timezone - {% endblock %} 

{% block htmlHeader %}
	<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
{% endblock %}

{% block breadcrumbs %}
	<li class="current"><a href="/">{{ currentSite.title }}</a></li>
{% endblock %}


{% block content %}

	<p>Please choose the timezone you want to browse this calendar in:</p>

	<div id="searchWrapper" style="display: none;">
		Search by capital city: <input type="text" id="searchTerm">
	</div>
	
	<ul class="timezones">
		{% for timezone in currentSite.cachedTimezonesAsList %}
			{% if timezone == currentTimeZone %}
				<li>{{ timezone }}</li>
			{% else %}
				<li><a href="/?mytimezone={{ timezone|url_encode }}">{{ timezone }}</a></li>
			{% endif %}
		{% endfor %}
	</ul>

{% endblock %}

{% block scripts %}
	<script type="text/javascript" src="/theme/default/js/searchTimeZones.js?v={{ config.assetsVersion }}"></script>
{% endblock %}

	
