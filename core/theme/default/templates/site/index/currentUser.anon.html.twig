{% extends 'site/page2col.html.twig' %}


{% block pageTitle %}You - {% endblock %} 


{% block breadcrumbs %}
	{% if not config.isSingleSiteMode %}<li><a href="/">{{ currentSite.title }}</a></li>{% endif %}
	<li class="current"><a href="/currentuser">Your details</a></li>
{% endblock %}

{% block contentLeft %}
	Let's talk about you.
{% endblock %}


{% block contentRight %}

	<ul class="actionList">
		
		{% if currentSite.cachedIsMultipleTimezones %}
			<li><a href="/mytimezone"><div class="iconGlobeLarge"></div> Timezone: {{ currentTimeZone }}</a></li>
		{% endif %}
					
		<li><a href="{{ config.getWebIndexDomainSecure() }}/you/login"><div class="iconUserLarge"></div> Login</a></li>
		<li><a href="{{ config.getWebIndexDomainSecure() }}/you/register"><div class="iconUserLarge"></div> Register</a></li>

	</ul>

{% endblock %}

