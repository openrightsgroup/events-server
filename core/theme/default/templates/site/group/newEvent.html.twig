{% extends 'site/group/page.html.twig' %}

{% block pageTitle %}New event in {{ group.title }} - {% endblock %} 


{% block innerContent %}


	<form action="/group/{{  group.slugForUrl }}/newevent/go" class="styled" method="GET">

		<div class="rowWrapper">
			<div class="labelWrapper">What is it?</div>
			<div class="widgetWrapper">
				<input type="text" name="what">
			</div>
			<div class="after"></div>
		</div>

		<div class="rowWrapper">
			<div class="labelWrapper">When is it?</div>
			<div class="widgetWrapper">
				<input type="text" name="when">
				{% include '/site/common/helpLink.html.twig' with {'id':'WhenHelpPopup' } %}
			</div>
			<div class="after"></div>
		</div>

		<div class="actionWrapperBig">
			<input type="submit" value="Continue creating an event">
		</div>	
	</form>

	{% if currentSite.isFeatureImporter %}
		<p>You can also <a href="/group/{{ group.slug }}/newimporturl">import an event from another website</a>.</p>
	{% endif %}

{% endblock %}





{% block scripts %}
	<script type="text/javascript">
		$( document ).ready( function() {
			$('#WhenHelpPopup')
			.show()
			.click(function() { 
				showHelpPopup('Enter when the event is.<ul>'+
						'<li>eg. 2nd dec 2013 7pm to 9pm</li>'+
						'<li>eg. 2nd wed dec between 19:30 and 22:00 </li>'+
						'<li>eg. fri 7pm for 3 hours 30 mins</li>'+
						'</ul>');
				return false; 
			});
		} );
	</script>
{% endblock %}