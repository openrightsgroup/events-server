{% extends 'site/page.html.twig' %}


{% block breadcrumbs %}
	{% if not config.isSingleSiteMode %}<li><a href="/">{{ currentSite.title }}</a></li>{% endif %}
	<li><a href="/venue">venues</a></li>
	<li class="current"><a href="/venue/virtual">virtual</a></li>
{% endblock %}


{% block content %}

	{% if not currentSite.isFeatureVirtualEvents %}
		<div class="flash-error">This feature has been disabled on this calendar.</div>
	{% endif %}
		
		
	<h2>Virtual</h2>
	
	<div id="innerPageWrapper">
		<ul id="innerPageActions">
			{% block actions %}{% endblock %}
			<li class="action">
				<a href="/api1/venue/virtual/events.ical" onclick="showExportPopup(); return false;">
					<div class="iconDownloadSmall"></div> export
				</a>
			</li>
			<li class="tab {% block tabDetails %}{% endblock %}"><a href="/venue/virtual">Details</a></li>
			<li class="tab"><a href="/venue/virtual/calendar">Calendar</a></li>
			<li class="tab {% block tabHistory %}{% endblock %}"><a href="/venue/virtual/history">History of changes</a></li>
		</ul>
		<div id="innerPage">

			{% block innerContent %}{% endblock %}

			<div id="afterInnerPageContent"></div>
		</div>
	</div>


{% endblock %}


{% block scriptsForState %}
	<script type="text/javascript">
		var exportData = { venue:'virtual' }
	</script>
{% endblock %}

